# =============================================
#  TUXMAN - Dockerfile con Buenas Pr谩cticas
# =============================================

# Usar imagen base oficial de Node.js Alpine (ligera y segura)
FROM node:20-alpine

# Metadata de la imagen
LABEL maintainer="Diego - ASIR" \
      description="TuxMan - Juego Pac-Man con tem谩tica Linux" \
      version="2.1.0"

# Instalar dependencias necesarias (curl para healthcheck, postgresql-client para entrypoint)
RUN apk add --no-cache curl postgresql-client

# Crear directorio de trabajo
WORKDIR /app

# Copiar archivos de dependencias primero (mejor cache de Docker)
COPY app/package*.json ./

# Instalar solo dependencias de producci贸n
RUN npm install --omit=dev && \
    npm cache clean --force

# Copiar el resto de la aplicaci贸n
COPY app/ ./

# Copiar script de entrypoint
COPY entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/entrypoint.sh

# Crear usuario no-root para seguridad
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs && \
    chown -R nodejs:nodejs /app

# Cambiar a usuario no-root
USER nodejs

# Puerto expuesto
EXPOSE 3000

# Healthcheck para verificar que la app est谩 funcionando
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

# Usar ENTRYPOINT para el script de inicializaci贸n
ENTRYPOINT ["entrypoint.sh"]

# CMD para ejecutar la aplicaci贸n
CMD ["node", "server.js"]
